<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvItemListNotes"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    android:background="@drawable/shape_radius"
    android:layout_marginBottom="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@android:color/white">
        <ImageView
            android:id="@+id/ivItemListNotes"
            android:layout_width="92dp"
            android:layout_height="92dp"
            tools:src="@drawable/img_cover"
            android:scaleType="centerCrop"
            android:layout_marginRight="8dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tvItemListNotesDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="26 january 2019"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="12dp"
            android:textColor="@color/colorGray"/>
        <TextView
            android:id="@+id/tvItemListNotesTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Paradise Lost"
            android:layout_below="@id/tvItemListNotesDate"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="4dp"
            android:textSize="24sp"
            android:maxLines="2"
            android:layout_toLeftOf="@id/ivItemListNotes"
            android:textColor="@color/colorBlack"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>
